@model NomadBuddy00.ViewModels.TravelerQuizViewModel

@{
    ViewData["Title"] = "Travel Personality Quiz";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Discover Your Travel Personality</h2>

    <form asp-action="Quiz" method="post">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var question = Model.Questions[i];
            <div class="mb-4">
                <p class="fw-bold">@question.QuestionText</p>
                <div class="d-flex justify-content-between">
                    @for (int score = 1; score <= 5; score++)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio"
                                   name="Questions[@i].Answer"
                                   value="@score" required />
                            <label class="form-check-label">@score</label>
                        </div>
                    }
                </div>
                <input type="hidden" name="Questions[@i].QuestionId" value="@question.QuestionId" />
                <input type="hidden" name="Questions[@i].QuestionText" value="@question.QuestionText" />
            </div>
        }

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg">Submit Quiz</button>
        </div>
    </form>
</div>

