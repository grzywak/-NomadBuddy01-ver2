@model NomadBuddy00.ViewModels.TripPlanCreateViewModel

<h1 class="mb-4">Create a New Trip Plan</h1>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Plan Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create Plan</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
