@using NomadBuddy00.ViewModels
@model ActivityIndexViewModel

@{
    ViewData["Title"] = "Activities";
}

<h1>All Activities</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Price</th>
            @if (User.IsInRole("Admin") || User.IsInRole("Buddy") || User.IsInRole("Nomad"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.AllActivities)
        {
            <tr>
                <td>@activity.Title</td>
                <td>@activity.Location</td>
                <td>@activity.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@activity.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@activity.Price.ToString("C")</td>

                @if (User.IsInRole("Admin") || (User.IsInRole("Buddy") && activity.CreatedById == ViewBag.CurrentUserId))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-warning btn-sm">Edit</a>

                        <form asp-action="Delete" asp-route-id="@activity.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this activity?');">
                                Delete
                            </button>
                        </form>
                    </td>
                }
                else if (User.IsInRole("Nomad"))
                {
                    <td>
                        @{
                            var alreadyReserved = Model.UserReservations.Any(r => r.ActivityId == activity.Id);
                        }

                        @if (!alreadyReserved)
                        {
                            <form asp-controller="ActivityReservation" asp-action="Create" method="post">
                                <input type="hidden" name="activityId" value="@activity.Id" />
                                <button type="submit" class="btn btn-success btn-sm">Reserve</button>
                            </form>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Already reserved</span>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Buddy") || User.IsInRole("Admin"))
{
    <h2>My Activities</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Location</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model.UserActivities)
            {
                <tr>
                    <td>@activity.Title</td>
                    <td>@activity.Location</td>
                    <td>@activity.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@activity.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@activity.Price.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-warning btn-sm">Edit</a>

                        <form asp-action="Delete" asp-route-id="@activity.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this activity?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (User.IsInRole("Admin") || User.IsInRole("Buddy"))
{
    <a asp-action="Create" class="btn btn-primary">Create Activity</a>
}
