@page
@using NomadBuddy00.Models

@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- First Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" required placeholder="First Name" />
                <label asp-for="Input.FirstName">First Name</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" required placeholder="Last Name" />
                <label asp-for="Input.LastName">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <!-- Gender -->
            <div class="form-floating mb-3">
                <select asp-for="Input.Gender" class="form-select" asp-items="Html.GetEnumSelectList<NomadBuddy00.Enums.Gender>()">
                    <option value="">-- Select Gender --</option>
                </select>
                <label asp-for="Input.Gender">Gender</label>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>

            <!-- Country -->
            <div class="form-floating mb-3">
                <select asp-for="Input.CountryId" class="form-select" asp-items="@(new SelectList(ViewData["Countries"] as List<Country>, "Id", "Name"))">
                    <option value="">-- Select Country --</option>
                </select>
                <label asp-for="Input.CountryId">Country</label>
                <span asp-validation-for="Input.CountryId" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" required placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" required placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" required placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Role Selection -->
            <div class="form-floating mb-3">
                <select asp-for="Input.Role" class="form-select" id="roleSelector">
                    <option value="Nomad">Nomad</option>
                    <option value="Buddy">Buddy</option>
                </select>
                <label asp-for="Input.Role">Register as</label>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <!-- Nomad-Specific Fields -->
            <div id="nomadFields" class="role-specific">
                <!-- Nomad Type -->
                <div class="form-floating mb-3">
                    <select asp-for="Input.NomadType" class="form-select" asp-items="Html.GetEnumSelectList<NomadBuddy00.Enums.NomadType>()">
                        <option value="">-- Select Nomad Type --</option>
                    </select>
                    <label asp-for="Input.NomadType">Nomad Type</label>
                    <span asp-validation-for="Input.NomadType" class="text-danger"></span>
                </div>

                <!-- Nationality -->
                <div class="form-floating mb-3">
                    <select asp-for="Input.NationalityId" class="form-select" asp-items="@(new SelectList(ViewData["Nationalities"] as List<Nationality>, "Id", "Name"))">
                        <option value="">-- Select Nationality --</option>
                    </select>
                    <label asp-for="Input.NationalityId">Nationality</label>
                    <span asp-validation-for="Input.NationalityId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Input.TravelBudget" class="form-select" asp-items="Html.GetEnumSelectList<NomadBuddy00.Enums.TravelBudget>()">
                        <option value="">-- Select Travel Budget --</option>
                    </select>
                    <label asp-for="Input.TravelBudget">Travel Budget</label>
                    <span asp-validation-for="Input.TravelBudget" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Input.PreferredLanguage" class="form-select" asp-items="Html.GetEnumSelectList<NomadBuddy00.Enums.Language>()">
                        <option value="">-- Select Language --</option>
                    </select>
                    <label asp-for="Input.PreferredLanguage">Preferred Language</label>
                    <span asp-validation-for="Input.PreferredLanguage" class="text-danger"></span>
                </div>

            </div>

            <!-- Buddy-Specific Fields -->
            <div id="buddyFields" class="role-specific" style="display: none;">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Specialization" class="form-control" placeholder="Specialization" />
                    <label asp-for="Input.Specialization">Specialization</label>
                    <span asp-validation-for="Input.Specialization" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.YearsOfExperience" class="form-control" type="number" placeholder="Years of Experience" />
                    <label asp-for="Input.YearsOfExperience">Years of Experience</label>
                    <span asp-validation-for="Input.YearsOfExperience" class="text-danger"></span>
                </div>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("roleSelector").addEventListener("change", function () {
            var role = this.value;
            document.getElementById("nomadFields").style.display = role === "Nomad" ? "block" : "none";
            document.getElementById("buddyFields").style.display = role === "Buddy" ? "block" : "none";
        });
    </script>
}
